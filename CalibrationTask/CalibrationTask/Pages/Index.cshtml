@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>

<div class="container mt-4">
    <h2>Calibration List</h2>
    <hr />
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <a class="btn btn-primary" asp-page="/AddEquipment">
                    <i class="fas fa-plus"></i> Add
                </a>
                <button class="btn btn-secondary ml-2">
                    <i class="fas fa-print"></i> Print
                </button>
                <button class="btn btn-success ml-2">
                    <i class="fas fa-file-excel"></i> Excel Export
                </button>
            </div>
            <div class="input-group w-25">
                <input type="text" class="form-control" placeholder="Search...">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
    <div class="table-responsive">
        <table class="table ">
            <thead>
                <tr>
                    <th>Equ. No</th>
                    <th>Description</th>
                    <th>No.</th>
                    <th>Model</th>
                    <th>Location</th>
                    <th>Equ. Start Date</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var item in Model.EquipmentsList)
                {
                    <tr>
                            <td>@item.Equipment_No</td>
                            <td>@item.Equipment_Desc</td>
                            <td>@item.Serial_No</td>
                            <td>@item.Model</td>
                            <td>@item.Location</td>
                              @* <td>@item.Equipment_Start_Date.ToString("yyyy-MM-dd")</td>   *@
                             <td>@item.Equipment_Start_Date</td> 
                        <td style="border-top:0" class="d-flex justify-content-center h-100 gap-4">
                                <a asp-route-id="@item.ID" asp-page="/DeleteEquipment" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i>
                            </a>
                                <a asp-page="CalibrationDetails" asp-route-id="@item.ID">
                                    <i class="fas fa-eye"></i>
                                </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
